#include <stdio.h>
#include <stdlib.h>
void nhap_mang (int n,int a[])
{
    for (int i=0; i<n; i++)
        scanf("%d",&a[i]);
}
int main()
{
    int a[100],n;
    printf("Nhap mang so nguyen n phan tu(n<=100|Nhap n cho chuan): ");
    scanf("%d",&n);
    nhap_mang(n,a);
    int maxx=0,minn=101,max_dex,min_dex;
    for (int i=0; i<n; i++)
    {
        if (*(a+i)>maxx)
        {
            maxx = *(a+i);
            max_dex = i;
        }
        if ( *(a+i) <minn)
        {
            minn = *(a+i);
            min_dex = i;
        }
    }
    printf("Max = %d Index = %d\n",maxx,max_dex);
    printf("Min = %d Index = %d",minn,min_dex);
    return 0;
}
